<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <%- include('../Utils/tittle') %>
            <hr class="my-5" />

            <div class="card">
                <div id="ActionsButtons" class="demo-inline-spacing" style="padding: 0px 50px;">
                </div>
                <div class="text-nowrap" style="margin: 25px 50px;">
                    <table id="TransportTable" class="table">
                    </table>
                </div>
            </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="AddOrUpdateTransportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transporte</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="mb-3">
                        <label for="TransportTypeSelect" class="form-label">Tipo de Transporte*</label>
                        <select id="TransportTypeSelect" class="form-select">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3">
                        <label for="TransportPlate1" class="form-label">Placa de Transporte*</label>
                        <input type="text" id="TransportPlate1" class="form-control"
                            placeholder="Placa de Transporte" />
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col mb-0">
                        <label for="TransportPlate2" class="form-label">Placa de Caja 1*</label>
                        <input type="text" id="TransportPlate2" class="form-control" placeholder="Placa de Caja 1" />
                    </div>
                    <div class="col mb-0">
                        <label for="TransportPlate3" class="form-label">Placa de Caja 2*</label>
                        <input type="text" id="TransportPlate3" class="form-control" placeholder="Placa de Caja 2" />
                    </div>
                </div>
                <div class="row" style="padding-top: 15px;">
                    <div class="col mb-3">
                        <label for="Capacity" class="form-label">Capacidad *</label>
                        <input type="number" id="Capacity" class="form-control" placeholder="Capacidad" />
                        <div id="defaultFormControlHelp" class="form-text">
                            <label for="defaultFormControlHelp" style="padding-left: 88%;">Toneladas</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Cerrar
                </button>
                <button id="AddOrUpdateTransportButton" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>